# Basic server configuration
NODE_ENV=development
SERVER_PORT=3000
SERVER_HOST=localhost
FRONTEND_URL=http://localhost:5173

# Session & authentication
# 1. U produkciji koristite samo ACCESS_PASSWORD_HASH (bcrypt hash)
# 2. ACCESS_PASSWORD служи само за развој и биће хешован при старту
# 3. SESSION_SECRET мора имати ≥32 знака и бити стабилан (не мењати између рестартова)
ACCESS_PASSWORD=
ACCESS_PASSWORD_HASH=
SESSION_SECRET=generate-a-long-random-secret-value-here
SESSION_COOKIE_NAME=sbx.sid
SESSION_COOKIE_SAMESITE=lax
SESSION_COOKIE_SECURE=false

# Session persistence (обавезно за продукцију)
# REDIS_URL пример: redis://localhost:6379/0 или rediss://:password@redis-host:6380/0
REDIS_URL=

# Metadata providers
TMDB_API_KEY=your-tmdb-api-key
OMDB_API_KEY=

# Rate limiting and overload protection
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500
MAX_CONCURRENT_REQUESTS=50
MAX_REQUESTS_PER_IP=10
REQUEST_TIMEOUT_MS=30000

# CORS configuration
CORS_ALLOW_ALL=false
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,X-Seedbox-CSRF
CORS_EXPOSED_HEADERS=Content-Length,Content-Disposition,Content-Range,Accept-Ranges
CORS_ALLOW_CREDENTIALS=true
CORS_PREFLIGHT_CONTINUE=false
CORS_OPTIONS_SUCCESS_STATUS=204

# Logging
LOG_LEVEL=info
LOG_FORMAT=text
LOG_REQUESTS=true
REQUEST_ID_HEADER=x-request-id
RESPONSE_ID_HEADER=X-Request-Id

# Metrics & observability
METRICS_ENABLED=true

# Login-specific rate limiting
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=5
