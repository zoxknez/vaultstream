# âš¡ StreamVault - NPM Configuration
# Optimizes package installation and build times

# Build from source only when necessary
build_from_source=false

# Use maximum compression for node_modules
compression=maximum

# Prefer offline cache
prefer-offline=true

# Faster installations
package-lock=true
save-exact=false

# Network optimizations
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Audit optimizations
audit=false

# Fund notifications (disable for cleaner output)
fund=false

# Progress bar
progress=true

# Legacy peer deps (for compatibility)
legacy-peer-deps=false
strict-peer-deps=false

# Engine strict (enforce Node version)
engine-strict=false

# Save prefix (use ^ for minor updates)
save-prefix=^
